<article>
    <a href="/dashboard"> &larr; Back to Dashboard</a>
    <h2>Edit Post</h2>
    <form class="edit-post-form">
        <div>
            <p>Edit Post Title</p>
            <input name="post-title" type="text" value="{{post.title}}" />

        </div>
        <div>
            <p>Edit Post Body</p>
            <textarea name="post-body">{{post.body}}</textarea>
        </div>
        <div>
            You posted on {{format_date_day_of_week post.date}} | <a href="/post/{{post.id}}">{{post.comments.length}} {{format_plural "comment" post.comments.length}}</a>
        </div>
        <button type="submit">Save Post</button>
        <button type="button" class="delete-post-btn">Delete Post</button>
    </form>
</article>

<form class="comment-form">
    <div>
        <textarea name="comment-body"></textarea>
    </div>

    <div>
        <button type="submit">Add a Comment</button>
    </div>
</form>

<script src="/js/edit.js"></script>
<script src="/js/deletePost.js"></script>
<script src="/js/deleteComment.js"></script>
<script src="/js/comment.js"></script>
