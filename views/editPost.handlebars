<div class="edit-post">
    <div class="section-title">
        <h2>Edit Post</h2>
    </div>
    <form id="edit-post-form" class="section-body">
        <input type="hidden" name="post-id" value="{{post.id}}" />
        <label class="form-label" for="post-title">Title</label>
        <input type="text" name="post-title" value="{{post.title}}" class="form-input" />
        <label class="form-label" for="post-body">Post Body</label>
        <textarea name="post-body" class="form-input">{{post.body}}</textarea>
        <button type="submit" class="btn">Edit Post</button>
        <button type="button" id="delete-btn" class="btn">Delete Post</button>
    </form>
</div>

<script src="/javascript/edit.js"></script>