<head>
    <title>Login | Tech Blog</title>
    <meta charset="UTF-8" />
    <link rel="stylesheet" href="https://unpkg.com/@picocss/pico@1.0.2/css/pico.min.css">
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="/css/style.css" />
</head>


<body>
  <main>
    <div id="mainCard">
      <form class="form login-form">
        <div class="form-group">
          <label for="email-login">Email</label>
          <input class="form-input" type="text" id="email-login" />
        </div>
        <div class="form-group">
          <label for="password-login">Password</label>
          <input class="form-input" type="password" id="password-login" />
        </div>
        <div class="form-group">
          <button class="btn btn-primary" id="signin" type="submit">Welcome. Please sign in.</button>
        </div>
      </form>
      <p class="textCard" id="show-signup-form"><a href="/signup" id="btn">New here? Sign up!</a></p>
    </div>
  </main>

  <script src="/js/login.js" type="text/javascript"></script>
</body>